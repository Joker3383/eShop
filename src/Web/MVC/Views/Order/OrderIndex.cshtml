@model List<MVC.Models.OrderDto>

<!DOCTYPE html>
<html>
<head>
    <title>Order List</title>
</head>
<body>

<div class="container mt-5">
    <h2>Order List</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total Sum</th>
                <th>Date of Order</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Login</td>
                    <td>@order.TotalSum</td>
                    <td>@order.DateOfOrder.ToShortDateString()</td>
                    <td>@order.ShoppingCarts.Count</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-orderId="@order.Id" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

</body>
</html>
