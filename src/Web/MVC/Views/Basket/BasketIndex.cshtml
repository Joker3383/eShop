@model BasketDto

<!DOCTYPE html>
<html>
<head>
    <title>Basket</title>
</head>
<body>
<h1>Basket</h1>
    
@if (Model != null && Model.Products != null && Model.Products.Count > 0)
{
    <table>
        <thead>
        <tr>
            <th>Product ID</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Key</td>
                <td>@product.Value</td>
            </tr>
        }
        </tbody>
    </table>
    
    <a asp-controller="Order" asp-action="CreateIndex" class="btn btn-primary">Create Order</a>
}
else
{
    <p>No products in the basket</p>
}
</body>
</html>