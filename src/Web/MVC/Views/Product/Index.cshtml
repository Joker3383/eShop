@model List<ProductDto>

<h1>Products</h1>
<hr>
<a asp-action="Create" class="btn btn-outline-primary">Create</a>

<hr>
<table class="table table-striped-columns" width="100%">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>CategoryName</th>
        <th>Price</th>
        <th>ImageURL</th>
        <th> </th>
        <th> </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.CategoryName</td>
            <td>@product.Price</td>
            <td>@product.ImageUrl</td>
            <td>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning">
                    Edit
                </a>
            </td>
            <td>
                <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                    <div>
                        <button type="submit" class="btn btn-outline-danger"
                                onclick="return confirm('Are you sure to delete this record ?')">
                            Delete
                        </button>

                    </div>
                </form>
            </td>

        </tr>
    }
    </tbody>
</table>>